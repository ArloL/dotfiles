#!/bin/sh

set -o errexit
set -o nounset
set -o xtrace

sleep 33

cd ~/.dotfiles
git pull --rebase
git push origin master

# macOS
softwareupdate --install --recommended

# Homebrew
if hash brew 2>/dev/null; then
    brew update
    brew upgrade
    brew cleanup
fi

# gem
if hash gem 2>/dev/null; then
    gem update
fi

# nix
if [ -d /nix ]; then
    nix-channel --update
    nix-env -u
    nix-collect-garbage
fi

# MacPorts
if hash port 2>/dev/null; then
    sudo port selfupdate
    sudo port upgrade outdated || true
    sudo port uninstall inactive || true
    sudo port uninstall rleaves || true
fi

# npm
if hash npm 2>/dev/null; then
    sudo npm -g update
fi

# yarn
if hash yarn 2>/dev/null; then
    yarn global upgrade
fi

# vagrant
if hash vagrant 2>/dev/null; then
    vagrant box list --machine-readable | grep box-name | cut -d, -f4 | xargs -L1 vagrant box update --box
    vagrant box prune
fi
