        lastchar="${target:${#target} - 1}"
        if [ "${lastchar}" = "\\" ]; then
            target="${target%?}"
        fi
        target="\"${target}\""
        cygstart "/cygdrive/c/Program Files (x86)/Microsoft VS Code/code.exe" "${target}"
    }
fi

if [ -f "/cygdrive/c/Program Files/Microsoft VS Code/code.exe" ]; then
    function edit() {
        local target
        local lastchar
        target=$(cygpath -w "$1")
        lastchar="${target:${#target} - 1}"
        if [ "${lastchar}" = "\\" ]; then
            target="${target%?}"
        fi
        target="\"${target}\""
