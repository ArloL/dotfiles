# Source:
# https://github.com/mathiasbynens/dotfiles/blob/master/.functions

# Create a new directory and enter it
function md() {
	mkdir -p "$@" && cd "$@"
}

# Use Gitâ€™s colored diff when available
hash git &>/dev/null
if [ $? -eq 0 ]; then
	function diff() {
		git diff --no-index --color-words "$@"
	}
fi
